<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- region App -->

    <style name="App" />

    <style name="App.Widget" />

    <!-- endregion -->

    <!-- region AppBar -->

    <style name="App.Widget.AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">0dp</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <!-- endregion -->

    <!-- region Toolbar -->

    <style name="App.Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="App.Widget.Toolbar.Inverse">
        <item name="android:background">@color/white</item>
        <item name="android:theme">@style/App.Widget.Toolbar.ThemeOverlay.Inverse</item>
    </style>

    <style name="App.Widget.Toolbar.ThemeOverlay" parent="@style/ThemeOverlay.AppCompat.Light" />

    <style name="App.Widget.Toolbar.ThemeOverlay.Inverse">
        <item name="android:tint">@color/dark_gray</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <!-- endregion -->

    <!-- region Text -->

    <style name="App.TextSubtitle1" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="App.Caption" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="App.Caption.Secondary">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <!-- endregion -->

</resources>